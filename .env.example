# ========================
# APPLICATION SETTINGS
# ========================
APP_NAME=Checkout
APP_ENV=
APP_DEBUG=true
APP_URL=http://localhost:8000

# ========================
# LOCALIZATION
# ========================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ========================
# MAINTENANCE MODE
# ========================
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# ========================
# SERVER SETTINGS
# ========================
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ========================
# LOGGING
# ========================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ========================
# DATABASE
# ========================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

# ========================
# SESSION
# ========================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ========================
# CACHE & QUEUE
# ========================
CACHE_STORE=database
# CACHE_PREFIX=
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log

# ========================
# FILESYSTEM
# ========================
FILESYSTEM_DISK=local
# FILESYSTEM_DISK_PUBLIC=public

# ========================
# MEMCACHED & REDIS
# ========================
MEMCACHED_HOST=127.0.0.1
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================
# MAIL SETTINGS
# ========================
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=your_email@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================
# AWS S3 STORAGE
# ========================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================
# PAGFAN PAYMENT GATEWAY
# ========================
PAGFAN_CLIENT_ID=your_pagfan_client_id
PAGFAN_CLIENT_SECRET=your_pagfan_client_secret
PAGFAN_BASE_URL=https://pagfan.com/v2
PAGFAN_POSTBACK_URL="${APP_URL}/api/pagfan/webhook"

# ========================
# VITE FRONTEND BUILD
# ========================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"